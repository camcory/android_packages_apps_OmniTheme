<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="systemui_theme" parent="@android:style/Theme.Material">
        <item name="android:colorPrimary">#303030</item>
        <item name="android:colorPrimaryDark">#303030</item>
    </style>

    <style name="Theme.SystemUI.Dialog" parent="@android:style/Theme.Material.Dialog" />

    <style name="TextAppearance" />

    <style name="TextAppearance.NotificationGuts">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">roboto-regular</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TextAppearance.NotificationGuts.Header">
        <item name="android:alpha">1</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.NotificationGuts.Secondary">
        <item name="android:alpha">1</item>
    </style>

    <style name="TextAppearance.NotificationGuts.Primary">
        <item name="android:alpha">1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.NotificationGuts.Radio">
        <item name="android:alpha">1</item>
    </style>

    <style name="TextAppearance.NotificationGuts.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="edit_theme" parent="@*android:style/Theme.Material">
        <item name="android:colorPrimary">#303030</item>
        <item name="android:colorPrimaryDark">#303030</item>
        <item name="android:colorBackground">#ff303030</item>
    </style>

</resources>
