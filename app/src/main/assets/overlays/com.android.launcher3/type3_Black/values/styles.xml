<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseLauncherTheme" parent="@*android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomOverscroll.Light" parent="@*com.android.launcher3:style/CustomOverscroll.Dark" />

    <style name="Icon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textColor">@*com.android.launcher3:color/workspace_icon_text_color</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="Icon.DeepShortcut">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:elevation">@*com.android.launcher3:dimen/deep_shortcuts_elevation</item>
        <item name="android:paddingStart">@*com.android.launcher3:dimen/bg_pill_height</item>
        <item name="android:paddingEnd">@*com.android.launcher3:dimen/deep_shortcut_padding_end</item>
        <item name="android:drawableEnd">@*com.android.launcher3:drawable/deep_shortcuts_drag_handle</item>
        <item name="android:drawablePadding">@*com.android.launcher3:dimen/deep_shortcut_drawable_padding</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:shadowRadius">0</item>
        <item name="customShadows">false</item>
        <item name="layoutHorizontal">true</item>
        <item name="iconSizeOverride">@*com.android.launcher3:dimen/deep_shortcut_icon_size</item>
    </style>

</resources>
