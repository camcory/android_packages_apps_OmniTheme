<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Platform.AppCompat.Light" parent="@*android:style/Theme.Material">
    </style>

    <style name="RecipientEditTextViewBase" parent="@*android:attr/autoCompleteTextViewStyle">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@*com.android.messaging:dimen/chip_height</item>
        <item name="android:popupBackground">@*android:color/material_grey_850</item>
        <item name="android:inputType">textEmailAddress|textMultiLine</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="BugleTheme.ConversationListActivity" parent="@*com.android.messaging:style/BugleTheme">
        <item name="android:windowBackground">@*android:color/material_grey_850</item>
    </style>

    <style name="appTitleStyle">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@*android:color/white</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="appVersionStyle">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@*android:color/white</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="appCopyrightStyle">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@*android:color/white</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
